<!DOCTYPE html>
<html>
  <head>
    <title>Shine</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="container">
      <% if notice.present? %>
        <aside class="alert alert-info">
          <p> <%= notice %> </p>
        </aside>
      <% end %>
      <% if alert.present? %>
        <aside class="alert alert-danger">
          <p> <%= alert %> </p>
        </aside>
      <% end %>


      <%= yield %>
    </div>

  </body>
</html>
